<!DOCTYPE html>

<head>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script defer src="https://kit.fontawesome.com/c105c4f544.js" crossorigin="anonymous"></script>
    <title>Add Project</title>
</head>

<body>
    <!-- navbar -->
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark bg-gradient">
        <div class="container-fluid">
            <span class="navbar-brand mx-5"><img src="/public/assets/icon.png" width="40">BimsID</span>

            <!-- untuk toggle drop down -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item mx-4">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <form class="d-flex mb-2 mb-lg-0 navbar-nav">
                    {{#if isLogin}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="#">Hello, {{user.name}}</a>
                    </li>
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                    {{else}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/sign-up">Sign Up</a>
                    </li>
                    {{/if}}

                    <a class="btn btn-outline-danger" href="/contact">Contact Me</a>
                </form>
            </div>
        </div>
    </nav>
    <!-- navbar end -->

    <!-- add Project -->
    <div class="container-sm d-flex justify-content-center" style="margin-top: 20vh;">
        <div class="card shadow p-3 mb-5 bg-body rounded" style="width: 30rem;">
            <div class="card-body row d-flex justify-content-center">
                <h5 class="card-title text-center mb-2">ADD MY PROJECT</h5>

                <form class="row g-3" action="/project" method="POST" enctype="multipart/form-data">
                    <div class="col-12">
                        <label for="projectname" class="form-label">Nama Project</label>
                        <input type="text" class="form-control" id="input-title" name="title">
                    </div>

                    <div class="col-md-6">
                        <label for="startdate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" name="startdate">
                    </div>
                    <div class="col-md-6">
                        <label for="enddate" class="form-label">End Date</label>
                        <input type="date" class="form-control" name="enddate">
                    </div>

                    <div class="col-12">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="input-description" name="description" maxlength="100"
                            class="form-control"></textarea>
                    </div>

                    <div class=" col-md-6">
                        <div class="form-check">
                            <input name="skillCheck" class="form-check-input" type="checkbox" value="react.png">
                            <label class="form-check-label" for="flexCheckDefault">
                                React JS
                            </label>
                        </div>
                        <div class="form-check">
                            <input name="skillCheck" class="form-check-input" type="checkbox" value="node-js.png">
                            <label class="form-check-label" for="flexCheckDefault">
                                Node JS
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input name="skillCheck" class="form-check-input" type="checkbox" value="js.png">
                            <label class="form-check-label" for="flexCheckDefault">
                                Javascript
                            </label>
                        </div>
                        <div class="form-check">
                            <input name="skillCheck" class="form-check-input" type="checkbox" value="typescript.png">
                            <label class=" form-check-label" for="flexCheckDefault">
                                Typescript
                            </label>
                        </div>
                    </div>

                    <label>Upload Image</label>
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="inputGroupFile02" name="image">
                        <label class="input-group-text" for="inputGroupFile02"><i
                                class="fa-solid fa-paperclip fa-lg mx-1"></i></label>
                    </div>

                    <input type="file" id="input-blog-image" hidden />

                    <div class="tumbol d-flex justify-content-end">
                        <button type="submit" class="btn btn-dark" style="width: 7rem;">Post Project</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- project End -->
</body>

</html>