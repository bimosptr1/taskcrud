<!DOCTYPE html>

<head>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script defer src="https://kit.fontawesome.com/c105c4f544.js" crossorigin="anonymous"></script>
    <title>Contact Me</title>
</head>

<body>
    <!-- navbar -->
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark bg-gradient">
        <div class="container-fluid">
            <span class="navbar-brand mx-5"><img src="/public/assets/icon.png" width="40">BimsID</span>

            <!-- untuk toggle drop down -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item mx-4">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <form class="d-flex mb-2 mb-lg-0 navbar-nav">
                    {{#if isLogin}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="#">Hello, {{user.name}}</a>
                    </li>
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                    {{else}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/sign-up">Sign Up</a>
                    </li>
                    {{/if}}

                    <a class="btn btn-outline-danger" href="/contact">Contact Me</a>
                </form>
            </div>
        </div>
    </nav>
    <!-- navbar end -->

    <!-- card contact -->
    <div class="container-sm d-flex justify-content-center" style="margin-top: 20vh;">
        <div class="card shadow p-3 mb-5 bg-body rounded" style="width: 30rem;">
            <div class="card-body row d-flex justify-content-center">
                <h5 class="card-title text-center mb-2">GET IN TOUCH</h5>

                <form class="row g-3">
                    <div class="col-12">
                        <label for="projectname" class="form-label">Nama</label>
                        <input type="text" class="form-control" id="projectname">
                    </div>

                    <div class="col-12">
                        <label for="mail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="mail" placeholder="mail@domain">
                    </div>

                    <div class="col-12">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="text" class="form-control" id="phone">
                    </div>

                    <div class="col-12">
                        <label for="celas">Subject</label>
                        <select class="form-select" aria-label="Default select example">
                            <option disabled selected></option>
                            <option value="1">Let's Talk</option>
                            <option value="2">Let's Collaboration</option>
                            <option value="3">I am Hiring</option>
                        </select>
                    </div>

                    <div class="col-12">
                        <label for="description" class="form-label">Your Massage</label>
                        <textarea id="input-blog-content" maxlength="100" class="form-control"
                            id="description"></textarea>
                    </div>

                    <div class="tumbol d-flex justify-content-end">
                        <button class="btn btn-dark" style="width: 7rem;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- contact end -->
</body>

</html>