                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="kanan">
                        <div class="card-body">
                            <img src="/public/assets/pp.jpg" class="card-img">
                            <h5 class="card-title d-flex justify-content-center">M. Bimo Saputro</h5>
                            <p class="card-text d-flex justify-content-center">Fullstack Developer
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- card end -->

    <!-- card list project -->
    <div class="container-lg">
        <div class="card mb-4">
            <div class="row">
                {{#each posts}}
                <div class="col-sm-4 mb-4">
                    <div class="card ">
                        <img src="/uploads/{{this.image}}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/project/{{this.id}}" class="text-decoration-none"
                                    target="_blank">{{this.project}}</a></h5>
                            <p class="card-text">{{this.durasi}}</p>
                            <p class="card-text">{{this.description}}</p>
                            <div class="icon mb-3">
                                {{#each technologies}}
                                <img src="/public/assets/{{this}}" style="width: 30px ;">
                                {{/each}}
                            </div>
                            <div class="tumbol d-flex justify-content-center">
                                {{#if isLogin}}
                                <a href="/edit-project/{{this.id}}" class="btn btn-dark btn-sm mx-3 px-5">Edit</a>
                                <a href="/delete-project/{{this.id}}" class="btn btn-dark btn-sm mx-3 px-5">Delete</a>
