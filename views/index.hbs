<body>
    <!-- navbar -->
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark bg-gradient">
        <div class="container-fluid">
            <span class="navbar-brand mx-5"><img src="/public/assets/icon.png" width="40">BimsID</span>

            <!-- untuk toggle drop down -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item mx-4">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <form class="d-flex mb-2 mb-lg-0 navbar-nav">
                    {{#if isLogin}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="#">Hello, {{user.name}}</a>
                    </li>
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                    {{else}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/sign-up">Sign Up</a>
                    </li>
                    {{/if}}

                    <a class="btn btn-outline-danger" href="/contact">Contact Me</a>
                </form>
            </div>
        </div>
    </nav>
    <!-- navbar end -->

    {{#if messages.success}}
    <div class="alert alert-success" role="alert" style="margin-top: 10vh;">
        {{messages.success}}
    </div>
    {{/if}}

    <!-- card  -->
    <div class="container-lg" style="margin-top: 20vh;">
