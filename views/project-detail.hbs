<!DOCTYPE html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script defer src="https://kit.fontawesome.com/c105c4f544.js" crossorigin="anonymous"></script>
    <title>Project Detail</title>
</head>

<body>
    <!-- navbar -->
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark bg-gradient">
        <div class="container-fluid">
            <span class="navbar-brand mx-5"><img src="/public/assets/icon.png" width="40">BimsID</span>

            <!-- untuk toggle drop down -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item mx-4">
                        <a class="nav-link active" aria-current="page" href="/home">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <form class="d-flex mb-2 mb-lg-0 navbar-nav">
                    {{#if isLogin}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="#">Hello, {{user.name}}</a>
                    </li>
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                    {{else}}
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item mx-4">
                        <a class="nav-link" href="/sign-up">Sign Up</a>
                    </li>
                    {{/if}}

                    <a class="btn btn-outline-danger" href="/contact">Contact Me</a>
                </form>
            </div>
        </div>
    </nav>
    <!-- navbar end -->


    <!-- card  -->
    <div class="container-lg" style="margin-top: 20vh;">
        {{#each posts}}
        <div class="card shadow p-3 mb-5 bg-body rounded">
            <div class="row">
                <div class="col-sm-7">
                    <div class="kiri">
                        <div class="card-body">
                            <img src="/uploads/{{this.image}}" class="card-img">
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="kanan">
                        <div class="card-body">
                            <h5 class="card-title d-flex justify-content-left">Duration</h5>
                            <p class="card-text d-flex justify-content-left">{{this.sd}}
                            <p class="card-text d-flex justify-content-left">{{this.ed}}

                            <h5 class="card-title d-flex justify-content-left">Technologies</h5>
                            <div class="">
                                {{#each technologies}}
                                <img src="/public/assets/{{this}}" style="width: 30px ;">
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12" style="text-align: justify;">
                        <p>{{this.description}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <!-- card end -->
</body>

</html>